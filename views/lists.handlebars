<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/css/style.css">
  <title>Lists</title>
</head>
  <body>
    <div class="topnav">
      <a href="/home">Home</a>
      <a href="books">Books</a>
      <a href="users">Users</a>
      <a href="groups">Groups</a>
      <a href="tags">Tags</a>
      <a class="active" href="/lists">Lists</a>
      <div class="topnav-right">
        <a href="/logout">Logout</a>
      </div>
    </div>

    {{!-- <main>
      <form method="POST" action="/lists/search" class="new-search">
        <label for="search-term">Search Term</label>
        <input id="search-term" type="text" name="searchTerm"/>
        <button id="doSearch" type="submit">Search</button>
      </form> --}}
    {{#if body}}
        <h1>Lists</h1>
        {{#each body}}
            <div class="lists">
                <ul class="no-bullets">
                    <li>Name: <a href="lists/{{this._id}}">{{this.name}}</a></li>
                    <li>Owners:</li>
                    <ul>
                        {{#each this.owners}}
                            <li>{{this.name}}</li>
                        {{/each}}
                    </ul>
                    <form method="POST" action="/lists/followList/{{this._id}}" class="followList">
                      <button id="follow-list" type="submit">Follow this List</button>
                    </form>
                    <form method="POST" action="/lists/fork/{{this._id}}" class="forkList">
                        <button type="submit">Fork This List</button>
                    </form>
                <p>Tags<p>
                <form method="POST" action="/lists/tag/{{this._id}}">
                  <label for="tagName">Add a new Tag!</label>
                  <input id="tagName" type="text" name="tagName">
                  <button type="submit">Click to add a tag!</button>
                </form>
        </div>
                </ul>
            </div>
        {{/each}}
      {{else}}
        <div>
          <h2>No lists found.</h2>
        </div>
      {{/if}}
    
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="public/books.js"></script>
  </body>
</html>
